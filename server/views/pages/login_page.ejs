<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- LOGIN PAGE MAIN-->
<section>
    <div class="page-container">
        <div class="container-center">
            <!-- MESSAGE AREA -->
            <% if(messages.length > 0) {%>
                <div class="alert alert-danger">
                    <%= messages %>
                </div>
            <% } %>
            
            <form class="login-form" method="POST" autocomplete="off">
                <!-- TITLE-->
                <h1 class="login-title"><%= title %></h1>
                <!-- USERNAME FIELD-->
                <div class="form-group">
                    <label for="login-input-username">Username</label>
                    <input type="text" class="form-control" id="username" name="username">
                </div>
                <!-- PASSWORD FIELD-->
                <div class="form-group">
                    <label for="login-input-password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <!-- BUTTONS-->
                <div class="login-buttons-container">
                    <button class='btn btn-secondary' id="login-button">Login</button>
                    <input class='btn btn-light' type="reset"/>
                </div>
            </form>

            <!-- TO REGISTER-->
            <p class="change-login-register-p">Not registered yet? Click <a href="/register">here</a> to register.</p>
        </div>
    </div>
</section>

<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>