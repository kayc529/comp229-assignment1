<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<section>
    <div class="page-container">
        <div class="container-center">
            <form class="login-form" method="POST" autocomplete="off">
                <h1 class="login-title"><%= title %></h1>
                <div class="form-group">
                    <label for="login-input-username">Username</label>
                    <input type="text" class="form-control" id="username" name="username">
                </div>
                <div class="form-group">
                    <label for="login-input-password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="login-buttons-container">
                    <button class='btn btn-secondary' id="login-button">Login</button>
                    <input class='btn btn-light' type="reset"/>
                </div>
            </form>
            <p class="change-login-register-p">Not registered yet? Click <a href="/register">here</a> to register.</p>
        </div>
    </div>
</section>

